package application;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

public class HW1Model {
	
	public enum Color {
		RED, BLUE, GREEN;
	}
	
	double red = 0.0;
	double blue = 0.0;
	double green = 0.0;
	double delta = 0.01;
	
	public HW1Model() {
		// Nothing to do.
	}
	
	public boolean setColor(Color c, double value) {
		switch (c) {
		case RED:
			if (Math.abs(red - value) < delta) {
				red = value;
				return true;
			}
		case BLUE:
			if (Math.abs(blue - value) < delta) {
				blue = value;
				return true;
			}
		case GREEN:
			if (Math.abs(green - value) < delta) {
				green = value;
				return true;
			}
		default:
			return false;
		}
	}
}
