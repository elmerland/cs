package application;

import javafx.beans.value.ObservableValue;
import application.HW1Model.Color;

public class HW1Controller {
	HW1Model model = null;
	HW1View view = null;
	
	public HW1Controller(HW1Model m, HW1View v) {
		model = m;
		view = v;
		view.addColorChangeHandler(
				Color.RED,
				(ObservableValue<? extends Number> ov, Number old_val, 
						Number new_val) -> {
					if (model.setColor(Color.RED, (Double)new_val)) {
						view.updateColorLabel(model.red, model.red, model.red);
					}
				});
		view.addColorChangeHandler(
				Color.BLUE,
				(ObservableValue<? extends Number> ov, Number old_val, 
						Number new_val) -> {
					model.setColor(Color.BLUE, (Double)new_val);
				});
		view.addColorChangeHandler(
				Color.GREEN,
				(ObservableValue<? extends Number> ov, Number old_val, 
						Number new_val) -> {
					model.setColor(Color.GREEN, (Double)new_val);
				});
	}

}
